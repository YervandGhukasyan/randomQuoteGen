{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "webAppName": {
      "type": "string",
      "metadata": {
        "description": "Name of the web app"
      }
    },
    "environment": {
      "type": "string",
      "defaultValue": "dev",
      "allowedValues": ["dev", "staging", "prod"],
      "metadata": {
        "description": "Environment name"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for resources"
      }
    }
  },
  "variables": {
    "appServicePlanName": "[concat('asp-', parameters('webAppName'))]",
    "skuName": "[if(equals(parameters('environment'), 'prod'), 'P1v2', 'B1')]"
  },
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2021-02-01",
      "name": "[variables('appServicePlanName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "[variables('skuName')]"
      },
      "kind": "linux",
      "properties": {
        "reserved": true
      },
      "tags": {
        "Environment": "[parameters('environment')]",
        "Project": "quote-api"
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2021-02-01", 
      "name": "[parameters('webAppName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]"
      ],
      "kind": "app,linux,container",
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]",
        "siteConfig": {
          "linuxFxVersion": "NODE|18-lts",
          "appCommandLine": "npm start",
          "appSettings": [
            {
              "name": "NODE_ENV",
              "value": "[if(equals(parameters('environment'), 'prod'), 'production', 'development')]"
            },
            {
              "name": "PORT",
              "value": "8000"
            },
            {
              "name": "QUOTABLE_API_URL",
              "value": "https://api.quotable.io"
            },
            {
              "name": "DUMMYJSON_API_URL", 
              "value": "https://dummyjson.com"
            },
            {
              "name": "DATABASE_PATH",
              "value": "/tmp/quotes.db"
            }
          ]
        }
      },
      "tags": {
        "Environment": "[parameters('environment')]",
        "Project": "quote-api"
      }
    }
  ],
  "outputs": {
    "webAppUrl": {
      "type": "string",
      "value": "[concat('https://', reference(parameters('webAppName')).defaultHostName)]"
    }
  }
}
